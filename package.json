{
  "name": "ihoku-monorepo",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach -pt run build",
    "build:ihoku-hooks": "yarn workspace @intks/ihoku-hooks run build",
    "build:docs": "yarn workspace @intks/ihoku-doc run build",
    "start:docs": "yarn workspace @intks/ihoku-doc run start",
    "dev:docs": "yarn workspace @intks/ihoku-doc run dev",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "typescript-eslint": "8.46.3",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^16.4.0",
    "typescript": "~5.5.4"
  },
  "dependencies": {
    "react": "^18.2.0"
  }
}
